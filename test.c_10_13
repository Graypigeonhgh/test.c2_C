#define _CRT_SECURE_NO_WARNINGS 1
#include<stdio.h>
#include<stdlib.h>
#include<time.h>
//猜数字游戏
void game()
{
	int ret=0;
	int guess=0;
	ret=rand()%100+1;
	while(1)
	{
		printf("请猜数字：>");
		scanf("%d",&guess);
		if(guess>ret)
		{
			printf("猜大了\n");
		}
		else if(guess<ret)
		{
			printf("猜小了\n");
		}
		else
		{
			printf("恭喜你，猜对了\n");
			break;
		}
	}
}

void manu()
{
	printf("##################################\n");
	printf("#####  1.play      0.exit  #####\n");
	printf("##################################\n");
}
	
int main()
{
	int input=0;
	srand((unsigned int)time(NULL));
	do
	{
		manu();
		printf("请选择>:");
		scanf("%d",&input);
		switch(input)
		{
			case 1:
					game();
					break;
			case 0:
					printf("退出游戏\n");
					break;
			default:
					printf("选择错误\n");
					break;
		}
	}while(input);
	return 0;
}


